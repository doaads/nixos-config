#!/bin/sh

set -ex

# update flake
nix flake update

# rebuild and switch
# if -r or --rebuild is passed, rebuild the system configuration

if [ "$1" = "-r" ] || [ "$1" = "--rebuild" ]; then
	sudo nixos-rebuild switch --flake .\#doaads --impure
fi

# switch user configuration
home-manager switch --flake .
